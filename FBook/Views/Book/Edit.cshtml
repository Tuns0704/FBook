@model Book
@{
    ViewData["Title"] = "Delete Book";
}
<form method="post" enctype="multipart/form-data" asp-action="Edit">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-dark">Edit Book</h2>
            <hr />
        </div>
        <div class="mb-2">
            <label asp-for="Isbn">ISBN</label>
            <input asp-for="Isbn" class="form-control"/>
            <span asp-validation-for="Isbn" class=text-danger></span>
        </div>
        <div class="mb-2">
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control"/>
            <span asp-validation-for="Title" class=text-danger></span>
        </div>
        <div class="mb-2">
            <label asp-for="Pages"></label>
            <input asp-for="Pages" class="form-control"/>
            <span asp-validation-for="Pages" class=text-danger></span>
        </div>
        <div class="mb-2">
            <label asp-for="Author"></label>
            <input asp-for="Author" class="form-control"/>
            <span asp-validation-for="Author" class=text-danger></span>
        </div>
        <div class="mb-2">
            <label asp-for="Category"></label>
            <input asp-for="Category" class="form-control"/>
            <span asp-validation-for="Category" class=text-danger></span>
        </div>
        <div class="mb-2">
            <label asp-for="Price"></label>
            <input asp-for="Price" class="form-control"/>
            <span asp-validation-for="Price" class=text-danger></span>
        </div>
        <div class="mb-2">
            <label asp-for="Desc"></label>
            <textarea asp-for="Desc" class="form-control"></textarea>
            <span asp-validation-for="Isbn" class=text-danger></span>
        </div>
        @*<div class="mb-2">
            <label asp-for="ImgUrl"></label>
            <input type="file" asp-for="ImgUrl" class="form-control"/>
            <span asp-validation-for="Isbn" class=text-danger></span>
        </div>*@
        <button type="submit" class="btn btn-success">Edit</button>
        <a asp-controller="Book" asp-action="Index" class="btn btn-succes">Back to list</a>
    </div>
</form>

