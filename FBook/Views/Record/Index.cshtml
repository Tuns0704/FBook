@model IEnumerable<Order>

@{
    ViewData["Title"] = "Record";
}
<div class="container p-3">
    <h2 class="text-primary">Book List</h2>
    <div class="row pt-4">
        <div class="col-6">
            <form asp-action="Index" method="get" style="user-select: auto;">
                <div class="d-flex">
                    <input type="text" class="form-control  me-sm-2" name="SearchString" placeholder="Search by Title"/>
                    <input type="submit" value="Search" class="btn btn-primary my-2 my-sm-0"/>
                </div>
            </form>
        </div>
        <a asp-action="Index">Back to full list</a>
    </div>
</div>
<br/>
<table class="table table-bordered table-striped" style="width: 100%">
    <thead>
        <tr>
            <th>
                Order ID
            </th>
            <th>
                User ID
            </th>
            <th>
                Order Date
            </th>
            <th></th>
        </tr>
        </thead>
        <tbody>
            @foreach(var obj in Model)
            {
                <tr>
                    <td width="20%">
                        @obj.Id
                    </td>
                    <td width="20%">
                        @obj.UId
                    </td>
                    <td width="20%">
                        @obj.OrderDate
                    </td>
                    @*<td width="5%">
                        @obj.Category
                    </td>
                    <td width="10%">
                        @obj.Price$
                    </td>
                    <td width="45%">
                        @obj.Desc
                    </td>*@
                    <td width="25%">
                        <div class="w-100 btn-group" role="group">
                            <a asp-controller="Record" asp-action="Details" asp-route-id="@obj.Id" class="btn btn-success "><i class="bi bi-pencil-square"></i>Details</a>
                        </div>
                    </td>
                </tr>
            }            
        </tbody>
</table>
<div style="display:flex;text-align:center;justify-content:center">
    <nav aria-label="Page navigation example">
        <ul class="pagination">
            @for (var i = 0; i < @ViewBag.numberOfPages; i++)
            {
                var style = (ViewBag.currentPage == @i) ? "active" : "";
                <li class="page-item @style">
                    <a class="page-link" asp-route-id="@i">@(i+1)</a>
                </li>
            }
         </ul>
    </nav>
</div>

